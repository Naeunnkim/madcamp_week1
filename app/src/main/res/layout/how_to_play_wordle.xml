<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:layout_gravity="center"
            android:text="How to play"
            android:textSize="32sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bottom_border_line">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="start"
                android:text="6번의 시도 내에 단어를 찾아내세요!"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="start"
                android:text="각 시도는 유효한 5글자 단어여야 합니다."
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center"
                android:text="각 시도 후에, 타일의 색상이 정답 단어에 얼마나 가까운지 알려줍니다."
                android:textSize="20sp"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="Examples"
            android:textSize="25sp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="#33CC33"
                android:gravity="center"
                android:text="R"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/all_border_line"
                android:gravity="center"
                android:text="A"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <!-- on below line creating an edit text for word-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/all_border_line"
                android:gravity="center"
                android:text="I"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <!-- on below line creating an edit text for word-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/all_border_line"
                android:gravity="center"
                android:text="S"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <!-- on below line creating an edit text for word-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/all_border_line"
                android:gravity="center"
                android:text="E"
                android:textSize="30sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:text="R은 정답에 포함되고 올바른 위치에 있습니다."
            android:textSize="15sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/all_border_line"
                android:gravity="center"
                android:text="P"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="#FFFF00"
                android:gravity="center"
                android:text="I"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <!-- on below line creating an edit text for word-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/all_border_line"
                android:gravity="center"
                android:text="L"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <!-- on below line creating an edit text for word-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/all_border_line"
                android:gravity="center"
                android:text="L"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <!-- on below line creating an edit text for word-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/all_border_line"
                android:gravity="center"
                android:text="S"
                android:textSize="30sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:text="I는 단어에 포함되지만 잘못된 위치에 있습니다."
            android:textSize="15sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/all_border_line"
                android:gravity="center"
                android:text="D"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/all_border_line"
                android:gravity="center"
                android:text="A"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <!-- on below line creating an edit text for word-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/all_border_line"
                android:gravity="center"
                android:text="N"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <!-- on below line creating an edit text for word-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="#808080"
                android:gravity="center"
                android:text="K"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <!-- on below line creating an edit text for word-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/all_border_line"
                android:gravity="center"
                android:text="E"
                android:textSize="30sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:text="K는 어디에도 포함되지 않습니다."
            android:textSize="15sp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/yesBtn"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_gravity="end"
            android:text="확인" />
    </LinearLayout>
</ScrollView>