<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/contact_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6850a4" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

    <ImageView
        android:id="@+id/contact_profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="start"
        android:layout_margin="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="25sp"
                android:text="name" />

            <TextView
                android:id="@+id/contact_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="20sp"
                android:text="telephone" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/phone_call"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="#00ff0000"
            android:drawableStart="@drawable/phone_calling"
            android:layout_margin="10dp"
            android:onClick="calling_btn"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/message"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="#00ff0000"
            android:drawableStart="@drawable/phone_message"
            android:layout_margin="10dp"
            android:onClick="message_btn"/>

        <ToggleButton
            android:id="@+id/favorites"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="#00ff0000"
            android:drawableStart="@drawable/phone_unmark_favorites"
            android:layout_margin="10dp"
            android:textOn=""
            android:textOff=""
            android:layout_weight="1"
            android:onClick="favorites_btn"/>
    </LinearLayout>

</LinearLayout>